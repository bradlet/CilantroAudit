
<ViewFlagTrendsPage>:


<ViewFlagTrendsPageContent>:
    audit_title_col: audit_title_col
    question_text_col: question_text_col
    times_flagged_col: times_flagged_col

    GridLayout:
        name: 'body-grid'
        rows: 3
        cols: 3

        # 1st Row
        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

        # 2nd Row
        Widget:
            name: 'place-holder'
            size_hint: 0.1, 1

        GridLayout:
            rows: 2
            cols: 1

            GridLayout:
                rows: 2
                cols: 1
                size_hint_x: 1.8

                GridLayout:
                    rows: 1
                    cols: 3
                    size_hint_y: 0.1

                    CilantroButton:
                        text: 'Question'
                        font_size: 20
                        on_release:
                            root.sort_by_audit_template()

                    CilantroButton:
                        text: 'Audit Title'
                        font_size: 20
                        on_release:
                            root.sort_by_question()

                    CilantroButton:
                        text: 'Number of Findings'
                        font_size: 20
                        on_release:
                            root.sort_by_times_flagged()

                ScrollView:
                    GridLayout:
                        rows: 1
                        cols: 3
                        size_hint_y: None
                        height: self.minimum_height

                        StackLayout:
                            id: question_text_col
                            size_hint_y: None
                            height: self.minimum_height

                        StackLayout:
                            id: audit_title_col
                            size_hint_y: None
                            height: self.minimum_height

                        StackLayout:
                            id: times_flagged_col
                            size_hint_y: None
                            height: self.minimum_height

        Widget:
            name: 'place-holder'
            size_hint: 0.1, 1

        # 3rd Row
        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

<EntryLabel>:
    size_hint_y: None


<QuestionButton>:
    size_hint_y: None


<AuditListPop>:
    name_col: name_col
    date_col: date_col
    unresolved_col: unresolved_col
    size_hint: .8, .8

    GridLayout:
        id: list_layout
        rows: 2

        GridLayout:
            id: headers
            cols: 3
            size_hint_y: 0.15

            CilantroLabel:
                id: date_header
                text: "Audit Date"

            CilantroLabel:
                id: name_header
                text: "Auditor Name"

            CilantroLabel:
                id: unresolved_header
                text: "Unresolved Answers"

        ScrollView:
            id: scrollable_list

            GridLayout:
                id: audit_list
                cols: 3
                size_hint_y: None
                height: self.minimum_height

                GridLayout:
                    id: date_col
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

                GridLayout:
                    id: name_col
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

                GridLayout:
                    id: unresolved_col
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
